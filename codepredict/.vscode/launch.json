{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Run GraphCodeBERT Training",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "args": [
                "--output_dir",
                "saved_models",
                "--do_train",
                "--train_data_file",
                "dataset/data.jsonl",
                "--epoch",
                "10",
                "--code_length",
                "512",
                "--data_flow_length",
                "128",
                "--train_batch_size",
                "16",
                "--eval_batch_size",
                "32",
                "--learning_rate",
                "2e-5",
                "--max_grad_norm",
                "1.0",
                "--evaluate_during_training",
                "--seed",
                "123456"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1"
            },
        }
    ]
}